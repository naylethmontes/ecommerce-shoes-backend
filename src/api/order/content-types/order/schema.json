{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "shipped",
        "delivered",
        "cancelled"
      ]
    },
    "address": {
      "type": "text"
    },
    "total_price": {
      "type": "decimal"
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "order.order-item"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "buyer": {
      "type": "json"
    },
    "wompiId": {
      "type": "string",
      "required": false
    },
    "email": {
      "type": "email"
    },
    "phone": {
      "type": "string",
      "required": false
    },
    "signature": {
      "type": "string",
      "required": true
    }
  }
}
